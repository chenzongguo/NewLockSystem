    <View
        style="@style/Line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证号："
            android:textColor="@color/black0"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/etCert_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请填写身份证号码"
            android:maxLength="18"
            android:textColorHint="@color/gray3"
            android:textSize="24sp"/>

    </LinearLayout>
    <View
        style="@style/Line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别："
            android:textColor="@color/black0"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tvSex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请选择性别"
            android:drawableRight="@drawable/right_arrow"
            android:textColorHint="@color/gray3"
            android:textSize="24sp"/>

    </LinearLayout>
    <View
        style="@style/Line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系电话："
            android:textColor="@color/black0"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请填写手机号码"
            android:maxLength="11"
            android:textColorHint="@color/gray3"
            android:textSize="24sp"/>

    </LinearLayout>


    <View
        style="@style/Line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证正面照："
            android:textColor="@color/black0"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImgIDcardFace"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/a4"
                />
            <ImageView
                android:id="@+id/ImgIDcardFace1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/taking_pic"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证反面照："
            android:textColor="@color/black0"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/ImgIDcardBack"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/a4"
            />
            <ImageView
                android:id="@+id/ImgIDcardBack1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/taking_pic"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人人像照片："
            android:textColor="@color/black0"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImgFace"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/a4"
                />
            <ImageView
                android:id="@+id/ImgFace1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/taking_pic"
                />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnUserPerfect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_login_btn"
        android:enabled="true"
        android:text="完善信息"
        android:textColor="@color/white"
        android:textSize="15dp"/>
</RelativeLayout>
