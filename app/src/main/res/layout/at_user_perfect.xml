            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请填写姓名"
            android:maxLength="10"
            android:textColorHint="@color/gray3"
            android:textSize="24sp"/>

    </LinearLayout>
