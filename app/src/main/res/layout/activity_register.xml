<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray9"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="1.输入手机号"
                android:textColor="@color/red0"
                android:textSize="28px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=">"
                android:textSize="28px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="2.输入验证码"
                android:textSize="28px"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=">"
                android:textSize="28px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="3.设置密码"
                android:textSize="28px"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/white"
                android:hint="  请输入你的手机号"
                android:inputType="phone"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="28px" />

            <Button
                android:id="@+id/btnGetVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginBottom="30px"
                android:layout_marginTop="40px"
                android:background="@drawable/selector_login_btn"
                android:enabled="true"
                android:text="获取验证码"
                android:textSize="30px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyVerifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@null"
                android:text="验证码已发送至15094307279"
                android:textSize="28px"/>

            <EditText
                android:id="@+id/etVerifyCode"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/white"
                android:hint="  请输入验证码"
                android:inputType="phone"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="28px" />

            <Button
                android:id="@+id/btnCheckCaptcha"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginBottom="30px"
                android:layout_marginTop="40px"
                android:background="@drawable/selector_login_btn"
                android:enabled="true"
                android:text="提交验证码"
                android:textSize="30px"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llypwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="30px"
            android:paddingRight="30px">




            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/white"
                android:hint="  输入密码"
                android:inputType="phone"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="28px" />

            <EditText
                android:id="@+id/etPwd2"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="  确认密码"
                android:inputType="phone"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@null"
                android:text="密码长度8-32位，须包含数字、字母、符号至少2种或以上元素。"
                android:textSize="28px"/>

            <Button
                android:id="@+id/btnUserRegister"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginBottom="30px"
                android:layout_marginTop="40px"
                android:background="@drawable/selector_login_btn"
                android:enabled="true"
                android:text="确认提交"
                android:textSize="30px"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
