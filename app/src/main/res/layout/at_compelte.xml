<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/include_toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@mipmap/head_portrait"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCorpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="南京君泰国际大酒店"
                android:textSize="18sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:background="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1001"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="7dp"
        android:background="@color/line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgImg1"
            android:layout_width="120sp"
            android:layout_height="120sp"
            />
        <ImageView
            android:id="@+id/imgImg2"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/imgImg3"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgImg4"
            android:layout_width="120sp"
            android:layout_height="120sp"
            />
        <ImageView
            android:id="@+id/imgImg5"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/imgImg6"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgImg7"
            android:layout_width="120sp"
            android:layout_height="120sp"
            />
        <ImageView
            android:id="@+id/imgImg8"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginLeft="10dp"
            />
